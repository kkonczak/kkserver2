<Page x:Class="KKServerGUI.Plugins"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KKServerGUI"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="596"
      Title="plugins" Loaded="Page_Loaded">

    <Grid>
        <ScrollViewer HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
            <Grid>

                <TextBlock x:Name="textBlock" Style="{DynamicResource PageTitle}" Margin="0,0,0.2,0">Plugins</TextBlock>
                <local:PluginsList x:Name="listOfPlugins" Margin="0,108,0.2,1"/>
                <Button x:Name="button" Content="Add from file..." HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Width="107" Click="button_Click"/>

            </Grid>
        </ScrollViewer>

    </Grid>
</Page>
