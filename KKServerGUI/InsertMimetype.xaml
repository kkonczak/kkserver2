<Window x:Class="KKServerGUI.InsertMimetype"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KKServerGUI"
        mc:Ignorable="d"
        Title="New mimetype" Height="188.542" Width="554.166"  WindowStartupLocation="CenterScreen" ShowInTaskbar="False" ResizeMode="NoResize" >
    <StackPanel>
        <TextBlock x:Name="textBlock" TextWrapping="Wrap" Text="File name ends with:" Height="23" Margin="4,4,4,0"/>
        <TextBox x:Name="endswith" Height="23" TextWrapping="Wrap" Margin="4,5"/>
        <TextBlock  TextWrapping="Wrap" Text="Mime type (eg. text/html):" Height="23" Margin="4,4,4,0"/>
        <TextBox x:Name="mimetype" Height="23" TextWrapping="Wrap" Margin="4,5"/>
        <Grid Height="28">
            <Button x:Name="button" Content="Cancel" Margin="0,7,25,2" Click="button_Click" HorizontalAlignment="Right" Width="75"/>
            <Button x:Name="button1" Content="OK" HorizontalAlignment="Right" Margin="0,7,117,0" VerticalAlignment="Top" Width="75" Click="button1_Click"/>
        </Grid>
    </StackPanel>
</Window>
