<Window x:Class="KKServerGUI.TextBoxWithRegExWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KKServerGUI"
        mc:Ignorable="d"
        Title="Build Regular Expression" Height="295.375" Width="429.167" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid>
        <StackPanel Height="230" VerticalAlignment="Top" Margin="0,0,0.4,0">
            <Label x:Name="label" Content="Your regular expression:"/>
            <TextBox x:Name="textBox" Height="64" TextWrapping="Wrap" Text="TextBox" MaxLines="1" Margin="0,0,0.4,0" TextChanged="textBox_TextChanged"/>
            <Label x:Name="label1" Content="Here type text to check:"/>
            <TextBox x:Name="textBox1" Height="23" TextWrapping="Wrap" Text="Example/path/to/file.php" TextChanged="textBox1_TextChanged"/>
            <Label x:Name="label2" Content="" Height="91" Margin="0,0,0.4,0"/>
        </StackPanel>
        <Button x:Name="button" Content="OK" HorizontalAlignment="Right" Margin="0,0,7.4,11.6" VerticalAlignment="Bottom" Width="75" Click="button_Click"/> 
    </Grid>
</Window>
